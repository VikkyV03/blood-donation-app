<!-- res/layout/activity_profile.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="24dp">

    <TextView android:id="@+id/profile_name"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Name" android:textSize="18sp" android:padding="8dp"/>

	<Button android:id="@+id/logout_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Logout"
		android:layout_marginTop="16dp"/>

    <TextView android:id="@+id/profile_email"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Email" android:textSize="18sp" android:padding="8dp"/>

    <TextView android:id="@+id/profile_phone"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Phone" android:textSize="18sp" android:padding="8dp"/>
</LinearLayout>
