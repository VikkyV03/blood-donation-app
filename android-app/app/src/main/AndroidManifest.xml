<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bloodapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodApp">

        <!-- Launcher: Start from LoginActivity -->
        <activity
            android:name=".screens.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity android:name=".screens.HomeActivity" android:exported="true" />
        <activity android:name=".screens.RegisterActivity" />
        <activity android:name=".screens.DonorFormActivity" />
        <activity android:name=".screens.MapScreenActivity" />
        <activity android:name=".screens.ProfileActivity" />
        <activity android:name=".screens.RequestFormActivity" />
        <activity android:name=".screens.CampOrganizerActivity" />
        <activity android:name=".screens.CampFunderActivity" />



    </application>

</manifest>
